{% comment %}
  Customer login page template
{% endcomment %}

<section class="login-page">
  <div class="login-container">
    <h1 class="login-title">sign in</h1>
    
    {% if form.errors %}
      <div class="form-errors">
        {% for error in form.errors %}
          <p class="error-message">{{ error | capitalize }}</p>
        {% endfor %}
      </div>
    {% endif %}
    
    {% form 'customer_login', class: 'login-form' %}
      <div class="form-group">
        <label for="customer-email" class="form-label">email</label>
        <input 
          type="email" 
          name="customer[email]" 
          id="customer-email"
          class="form-input"
          value="{{ form.email }}"
          required
          autocomplete="email"
        />
      </div>
      
      <div class="form-group">
        <label for="customer-password" class="form-label">password</label>
        <input 
          type="password" 
          name="customer[password]" 
          id="customer-password"
          class="form-input"
          required
          autocomplete="current-password"
        />
      </div>
      
      <div class="form-actions">
        <div class="custom-button-wrapper">
          <button type="submit" class="custom-button login-btn">sign in</button>
        </div>
      </div>
      
      <div class="form-links">
        <a href="{{ routes.account_recover_url }}" class="forgot-password">forgot password?</a>
      </div>
    {% endform %}
    
    <div class="register-prompt">
      <p class="register-text">don't have an account?</p>
      <a href="{{ routes.account_register_url }}" class="register-link">create account</a>
    </div>
  </div>
</section>

{% stylesheet %}
  .login-page {
    padding: 120px 0 60px;
    min-height: 100vh;
    background-color: #ffffff;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .login-container {
    max-width: 320px;
    width: 100%;
    padding: 0;
  }

  .login-title {
    font-size: 31.2px;
    font-weight: 700;
    letter-spacing: -0.08em;
    margin: 0 0 60px 0;
    color: #000;
    font-family: 'Helvetica', 'Arial', sans-serif;
    text-transform: lowercase;
    text-align: center;
  }

  .form-errors {
    margin-bottom: 30px;
    text-align: center;
  }

  .error-message {
    color: #d32f2f;
    font-size: 12px;
    font-family: 'Realtime Rounded Test', sans-serif;
    margin: 0 0 8px 0;
  }

  .login-form {
    display: flex;
    flex-direction: column;
    gap: 30px;
    margin-bottom: 40px;
  }

  .form-group {
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .form-label {
    font-size: 12px;
    font-family: 'Realtime Rounded Test', sans-serif;
    color: #000;
    font-weight: 400;
    text-transform: lowercase;
  }

  .form-input {
    padding: 12px 0;
    border: none;
    border-bottom: 1px solid #ddd;
    font-size: 14px;
    font-family: 'Realtime Rounded Test', sans-serif;
    background-color: transparent;
    transition: border-color 0.2s ease;
  }

  .form-input:focus {
    outline: none;
    border-bottom-color: #4A90E2;
  }

  .form-actions {
    margin-top: 20px;
    text-align: center;
  }

  .custom-button-wrapper {
    display: inline-block;
    position: relative;
  }

  /* Custom Button Element with Clean Crop Marks */
  .custom-button {
    display: inline-block;
    padding: 8px 32px;
    background-color: transparent;
    color: #000;
    border: none;
    font-size: 12px;
    font-family: 'Realtime Rounded Test', sans-serif;
    letter-spacing: 0.05em;
    text-transform: lowercase;
    cursor: pointer;
    text-align: center;
    position: relative;
  }

  /* Top corner crop marks */
  .custom-button::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 12px;
    height: 12px;
    border-top: 2px solid #4A90E2;
    border-left: 2px solid #4A90E2;
    pointer-events: none;
  }

  .custom-button::after {
    content: '';
    position: absolute;
    top: 0;
    right: 0;
    width: 12px;
    height: 12px;
    border-top: 2px solid #4A90E2;
    border-right: 2px solid #4A90E2;
    pointer-events: none;
  }

  /* Button Wrapper for bottom crop marks */
  .custom-button-wrapper::before {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 12px;
    height: 12px;
    border-bottom: 2px solid #4A90E2;
    border-left: 2px solid #4A90E2;
    pointer-events: none;
  }

  .custom-button-wrapper::after {
    content: '';
    position: absolute;
    bottom: 0;
    right: 0;
    width: 12px;
    height: 12px;
    border-bottom: 2px solid #4A90E2;
    border-right: 2px solid #4A90E2;
    pointer-events: none;
  }

  .form-links {
    text-align: center;
    margin-top: 30px;
  }

  .forgot-password {
    color: #666;
    text-decoration: none;
    font-family: 'Realtime Rounded Test', sans-serif;
    font-size: 11px;
    text-transform: lowercase;
    transition: opacity 0.2s ease;
  }

  .forgot-password:hover {
    opacity: 0.7;
  }

  .register-prompt {
    text-align: center;
    margin-top: 60px;
  }

  .register-text {
    font-size: 12px;
    color: #666;
    font-family: 'Realtime Rounded Test', sans-serif;
    margin: 0 0 8px 0;
  }

  .register-link {
    color: #4A90E2;
    text-decoration: none;
    font-family: 'Realtime Rounded Test', sans-serif;
    font-size: 12px;
    text-transform: lowercase;
    transition: opacity 0.2s ease;
  }

  .register-link:hover {
    opacity: 0.7;
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .login-page {
      padding: 100px 20px 40px;
    }

    .login-title {
      font-size: 26px;
      margin-bottom: 40px;
    }

    .form-input {
      padding: 10px 0;
    }
  }
{% endstylesheet %}