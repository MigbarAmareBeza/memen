{% comment %}
  Customer registration page template
{% endcomment %}

<section class="register-page">
  <div class="register-container">
    <h1 class="register-title">create account</h1>
    
    {% if form.errors %}
      <div class="form-errors">
        {% for error in form.errors %}
          <p class="error-message">{{ error | capitalize }}</p>
        {% endfor %}
      </div>
    {% endif %}
    
    {% form 'create_customer', class: 'register-form' %}
      <div class="form-group">
        <label for="register-first-name" class="form-label">first name</label>
        <input 
          type="text" 
          name="customer[first_name]" 
          id="register-first-name"
          class="form-input"
          value="{{ form.first_name }}"
          required
          autocomplete="given-name"
        />
      </div>
      
      <div class="form-group">
        <label for="register-last-name" class="form-label">last name</label>
        <input 
          type="text" 
          name="customer[last_name]" 
          id="register-last-name"
          class="form-input"
          value="{{ form.last_name }}"
          required
          autocomplete="family-name"
        />
      </div>
      
      <div class="form-group">
        <label for="register-email" class="form-label">email</label>
        <input 
          type="email" 
          name="customer[email]" 
          id="register-email"
          class="form-input"
          value="{{ form.email }}"
          required
          autocomplete="email"
        />
      </div>
      
      <div class="form-group">
        <label for="register-password" class="form-label">password</label>
        <input 
          type="password" 
          name="customer[password]" 
          id="register-password"
          class="form-input"
          required
          autocomplete="new-password"
        />
      </div>
      
      <div class="form-actions">
        <div class="custom-button-wrapper">
          <button type="submit" class="custom-button register-btn">create account</button>
        </div>
      </div>
    {% endform %}
    
    <div class="login-prompt">
      <p class="login-text">already have an account?</p>
      <a href="{{ routes.account_login_url }}" class="login-link">sign in</a>
    </div>
  </div>
</section>

{% stylesheet %}
  .register-page {
    padding: 120px 0 60px;
    min-height: 100vh;
    background-color: #ffffff;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .register-container {
    max-width: 400px;
    width: 100%;
    padding: 0 20px;
  }

  .register-title {
    font-size: 31.2px;
    font-weight: 700;
    letter-spacing: -0.08em;
    margin: 0 0 40px 12px;
    color: #000;
    font-family: 'Helvetica', 'Arial', sans-serif;
    text-transform: lowercase;
    text-align: center;
  }

  .form-errors {
    margin-bottom: 20px;
    padding: 0 12px;
  }

  .error-message {
    color: #d32f2f;
    font-size: 14px;
    font-family: 'Realtime Rounded Test', sans-serif;
    margin: 0 0 8px 0;
    text-align: center;
  }

  .register-form {
    display: flex;
    flex-direction: column;
    gap: 20px;
    margin-bottom: 30px;
  }

  .form-group {
    display: flex;
    flex-direction: column;
    gap: 8px;
    padding: 0 12px;
  }

  .form-label {
    font-size: 14px;
    font-family: 'Realtime Rounded Test', sans-serif;
    color: #000;
    font-weight: 500;
    text-transform: lowercase;
  }

  .form-input {
    padding: 12px 16px;
    border: 1px solid #ddd;
    border-radius: 4px;
    font-size: 14px;
    font-family: 'Realtime Rounded Test', sans-serif;
    background-color: #fff;
    transition: border-color 0.2s ease;
  }

  .form-input:focus {
    outline: none;
    border-color: #4A90E2;
  }

  .form-actions {
    padding: 0 12px;
    margin-top: 10px;
  }

  .custom-button-wrapper {
    display: flex;
    justify-content: center;
  }

  .register-btn {
    min-width: 140px;
  }

  .login-prompt {
    text-align: center;
    padding: 20px 12px 0;
    border-top: 1px solid #f0f0f0;
  }

  .login-text {
    font-size: 14px;
    color: #666;
    font-family: 'Realtime Rounded Test', sans-serif;
    margin: 0 0 8px 0;
  }

  .login-link {
    color: #4A90E2;
    text-decoration: none;
    font-family: 'Realtime Rounded Test', sans-serif;
    font-size: 14px;
    font-weight: 500;
    text-transform: lowercase;
    transition: opacity 0.2s ease;
  }

  .login-link:hover {
    opacity: 0.7;
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .register-page {
      padding: 100px 0 40px;
    }

    .register-container {
      padding: 0 15px;
    }

    .register-title {
      font-size: 26px;
      margin-bottom: 30px;
    }

    .form-input {
      padding: 10px 14px;
    }
  }
{% endstylesheet %}