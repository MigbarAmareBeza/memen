{% comment %}
  Customer password reset page template
{% endcomment %}

<section class="reset-password-page">
  <div class="reset-container">
    <h1 class="reset-title">forgot password?</h1>
    <p class="reset-description">enter your email address and we'll send you a link to reset your password.</p>
    
    {% if form.errors %}
      <div class="form-errors">
        {% for error in form.errors %}
          <p class="error-message">{{ error | capitalize }}</p>
        {% endfor %}
      </div>
    {% endif %}
    
    {% if form.posted_successfully? %}
      <div class="success-message">
        <p>we've sent you an email with a link to update your password.</p>
      </div>
    {% endif %}
    
    {% form 'recover_customer_password', class: 'reset-form' %}
      <div class="form-group">
        <label for="recover-email" class="form-label">email</label>
        <input 
          type="email" 
          name="email" 
          id="recover-email"
          class="form-input"
          value="{{ form.email }}"
          required
          autocomplete="email"
        />
      </div>
      
      <div class="form-actions">
        <div class="custom-button-wrapper">
          <button type="submit" class="custom-button reset-btn">send reset link</button>
        </div>
      </div>
    {% endform %}
    
    <div class="back-to-login">
      <a href="{{ routes.account_login_url }}" class="back-link">back to sign in</a>
    </div>
  </div>
</section>

{% stylesheet %}
  .reset-password-page {
    padding: 120px 0 60px;
    min-height: 100vh;
    background-color: #ffffff;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .reset-container {
    max-width: 400px;
    width: 100%;
    padding: 0 20px;
    text-align: center;
  }

  .reset-title {
    font-size: 31.2px;
    font-weight: 700;
    letter-spacing: -0.08em;
    margin: 0 0 20px 0;
    color: #000;
    font-family: 'Helvetica', 'Arial', sans-serif;
    text-transform: lowercase;
  }

  .reset-description {
    font-size: 14px;
    color: #666;
    font-family: 'Realtime Rounded Test', sans-serif;
    margin: 0 0 40px 0;
    line-height: 1.4;
  }

  .form-errors {
    margin-bottom: 20px;
  }

  .error-message {
    color: #d32f2f;
    font-size: 14px;
    font-family: 'Realtime Rounded Test', sans-serif;
    margin: 0 0 8px 0;
  }

  .success-message {
    background-color: #e8f5e8;
    padding: 16px;
    border-radius: 4px;
    margin-bottom: 30px;
  }

  .success-message p {
    color: #2e7d32;
    font-size: 14px;
    font-family: 'Realtime Rounded Test', sans-serif;
    margin: 0;
  }

  .reset-form {
    display: flex;
    flex-direction: column;
    gap: 20px;
    margin-bottom: 30px;
  }

  .form-group {
    display: flex;
    flex-direction: column;
    gap: 8px;
    text-align: left;
  }

  .form-label {
    font-size: 14px;
    font-family: 'Realtime Rounded Test', sans-serif;
    color: #000;
    font-weight: 500;
    text-transform: lowercase;
  }

  .form-input {
    padding: 12px 16px;
    border: 1px solid #ddd;
    border-radius: 4px;
    font-size: 14px;
    font-family: 'Realtime Rounded Test', sans-serif;
    background-color: #fff;
    transition: border-color 0.2s ease;
  }

  .form-input:focus {
    outline: none;
    border-color: #4A90E2;
  }

  .form-actions {
    margin-top: 10px;
  }

  .custom-button-wrapper {
    display: flex;
    justify-content: center;
  }

  .reset-btn {
    min-width: 140px;
  }

  .back-to-login {
    border-top: 1px solid #f0f0f0;
    padding-top: 20px;
  }

  .back-link {
    color: #4A90E2;
    text-decoration: none;
    font-family: 'Realtime Rounded Test', sans-serif;
    font-size: 12px;
    text-transform: lowercase;
    transition: opacity 0.2s ease;
  }

  .back-link:hover {
    opacity: 0.7;
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .reset-password-page {
      padding: 100px 0 40px;
    }

    .reset-container {
      padding: 0 15px;
    }

    .reset-title {
      font-size: 26px;
    }

    .form-input {
      padding: 10px 14px;
    }
  }
{% endstylesheet %}