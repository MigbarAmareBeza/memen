{% stylesheet %}
  .campaigns-page {
    padding: 120px 0 60px;
    min-height: 100vh;
    background-color: #ffffff;
    position: relative;
  }

  .campaigns-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
    position: relative;
  }

  .campaigns-title {
    font-size: 31.2px;
    font-weight: 700;
    letter-spacing: -0.08em;
    margin: 0 0 60px 12px;
    color: #000;
    font-family: 'Helvetica', 'Arial', sans-serif;
    text-transform: lowercase;
  }

  .folders-grid {
    position: relative;
    height: 80vh;
    min-height: 600px;
    width: 100%;
  }

  .folder-item {
    position: absolute;
    cursor: pointer;
    transition: transform 0.2s ease;
  }

  .folder-item:hover {
    transform: scale(1.05);
  }

  .folder-icon {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 8px;
  }

  .folder-svg {
    width: 80px;
    height: 64px;
    transition: all 0.2s ease;
  }

  .folder-item:hover .folder-svg {
    filter: drop-shadow(0 4px 8px rgba(0,0,0,0.1));
  }

  .folder-name {
    font-size: 12px;
    font-family: 'Realtime Rounded Test', sans-serif;
    color: #666;
    text-align: center;
    max-width: 100px;
    line-height: 1.2;
  }

  /* Campaign Gallery */
  .campaign-gallery {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: #fff;
    z-index: 1000;
    padding: 60px 20px 20px;
    opacity: 0;
    visibility: hidden;
    transition: all 0.3s ease;
    overflow-y: auto;
  }

  .campaign-gallery.active {
    opacity: 1;
    visibility: visible;
  }

  .gallery-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 40px;
    padding: 0 12px;
  }

  .gallery-title {
    font-size: 24px;
    font-weight: 700;
    color: #000;
    font-family: 'Helvetica', 'Arial', sans-serif;
    text-transform: lowercase;
    margin: 0;
  }

  .close-gallery {
    background: none;
    border: none;
    font-size: 32px;
    color: #666;
    cursor: pointer;
    padding: 8px;
    transition: color 0.2s ease;
  }

  .close-gallery:hover {
    color: #000;
  }

  .gallery-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 30px;
    max-width: 1000px;
    margin: 0 auto;
  }

  .gallery-item {
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .gallery-image {
    width: 100%;
    aspect-ratio: 4/5;
    object-fit: cover;
    transition: opacity 0.2s ease;
  }

  .gallery-image:hover {
    opacity: 0.9;
  }

  .image-caption {
    font-size: 12px;
    color: #666;
    font-family: 'Realtime Rounded Test', sans-serif;
    text-align: center;
    padding: 0 8px;
  }

  /* Overlay */
  .campaigns-overlay {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0,0,0,0.5);
    z-index: 999;
    opacity: 0;
    visibility: hidden;
    transition: all 0.3s ease;
  }

  .campaigns-overlay.active {
    opacity: 1;
    visibility: visible;
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .campaigns-page {
      padding: 100px 0 40px;
    }

    .campaigns-title {
      font-size: 26px;
      margin-bottom: 40px;
    }

    .folders-grid {
      height: 70vh;
      min-height: 500px;
    }

    .folder-svg {
      width: 60px;
      height: 48px;
    }

    .folder-name {
      font-size: 10px;
      max-width: 80px;
    }

    .campaign-gallery {
      padding: 40px 15px 15px;
    }

    .gallery-title {
      font-size: 20px;
    }

    .gallery-grid {
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 20px;
    }

    /* Adjust folder positions for mobile */
    .folder-item[style*="left: 75%"] {
      left: 65% !important;
    }
    
    .folder-item[style*="left: 70%"] {
      left: 60% !important;
    }
  }
{% endstylesheet %}

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const folderItems = document.querySelectorAll('.folder-item');
    const campaignGallery = document.getElementById('campaign-gallery');
    const galleryTitle = document.getElementById('gallery-title');
    const galleryGrid = document.getElementById('gallery-grid');
    const closeGallery = document.getElementById('close-gallery');
    const overlay = document.getElementById('campaigns-overlay');
    
    // Campaign data - in a real implementation, this would come from Shopify
    const campaigns = {
      'spring-2024': {
        title: 'Spring 2024',
        images: [
          { src: 'https://via.placeholder.com/400x500/8DB4E2/FFFFFF?text=Spring+Look+1', caption: 'spring collection lookbook 01' },
          { src: 'https://via.placeholder.com/400x500/B4D4F1/FFFFFF?text=Spring+Look+2', caption: 'spring collection lookbook 02' },
          { src: 'https://via.placeholder.com/400x500/C8E6C9/FFFFFF?text=Spring+Look+3', caption: 'spring collection lookbook 03' },
          { src: 'https://via.placeholder.com/400x500/DCEDC8/FFFFFF?text=Spring+Look+4', caption: 'spring collection lookbook 04' }
        ]
      },
      'summer-collection': {
        title: 'Summer Collection',
        images: [
          { src: 'https://via.placeholder.com/400x500/FFE082/FFFFFF?text=Summer+Look+1', caption: 'summer vibes campaign 01' },
          { src: 'https://via.placeholder.com/400x500/FFCC02/FFFFFF?text=Summer+Look+2', caption: 'summer vibes campaign 02' },
          { src: 'https://via.placeholder.com/400x500/FF8A65/FFFFFF?text=Summer+Look+3', caption: 'summer vibes campaign 03' }
        ]
      },
      'autumn-vibes': {
        title: 'Autumn Vibes',
        images: [
          { src: 'https://via.placeholder.com/400x500/D7CCC8/FFFFFF?text=Autumn+Look+1', caption: 'autumn campaign mila bag' },
          { src: 'https://via.placeholder.com/400x500/BCAAA4/FFFFFF?text=Autumn+Look+2', caption: 'autumn campaign studio shots' },
          { src: 'https://via.placeholder.com/400x500/8D6E63/FFFFFF?text=Autumn+Look+3', caption: 'autumn campaign lifestyle' }
        ]
      },
      'winter-essentials': {
        title: 'Winter Essentials',
        images: [
          { src: 'https://via.placeholder.com/400x500/90A4AE/FFFFFF?text=Winter+Look+1', caption: 'winter essentials 01' },
          { src: 'https://via.placeholder.com/400x500/607D8B/FFFFFF?text=Winter+Look+2', caption: 'winter essentials 02' }
        ]
      },
      'behind-scenes': {
        title: 'Behind the Scenes',
        images: [
          { src: 'https://via.placeholder.com/400x500/F8BBD9/FFFFFF?text=BTS+1', caption: 'behind the scenes studio setup' },
          { src: 'https://via.placeholder.com/400x500/E1BEE7/FFFFFF?text=BTS+2', caption: 'behind the scenes team work' },
          { src: 'https://via.placeholder.com/400x500/CE93D8/FFFFFF?text=BTS+3', caption: 'behind the scenes creative process' }
        ]
      },
      'collaborations': {
        title: 'Collaborations',
        images: [
          { src: 'https://via.placeholder.com/400x500/A5D6A7/FFFFFF?text=Collab+1', caption: 'collaboration project alpha' },
          { src: 'https://via.placeholder.com/400x500/81C784/FFFFFF?text=Collab+2', caption: 'collaboration project beta' }
        ]
      }
    };
    
    // Handle folder clicks
    folderItems.forEach(folder => {
      folder.addEventListener('click', function() {
        const campaignId = this.dataset.campaign;
        const campaign = campaigns[campaignId];
        
        if (campaign) {
          showCampaign(campaign);
        }
      });
    });
    
    // Show campaign gallery
    function showCampaign(campaign) {
      galleryTitle.textContent = campaign.title;
      
      // Clear existing images
      galleryGrid.innerHTML = '';
      
      // Add images
      campaign.images.forEach(image => {
        const item = document.createElement('div');
        item.className = 'gallery-item';
        
        item.innerHTML = `
          <img src="${image.src}" alt="${image.caption}" class="gallery-image" loading="lazy">
          <p class="image-caption">${image.caption}</p>
        `;
        
        galleryGrid.appendChild(item);
      });
      
      // Show gallery
      overlay.classList.add('active');
      campaignGallery.classList.add('active');
      document.body.style.overflow = 'hidden';
    }
    
    // Close gallery
    function closeCampaignGallery() {
      overlay.classList.remove('active');
      campaignGallery.classList.remove('active');
      document.body.style.overflow = '';
    }
    
    closeGallery.addEventListener('click', closeCampaignGallery);
    overlay.addEventListener('click', closeCampaignGallery);
    
    // Close on escape key
    document.addEventListener('keydown', function(e) {
      if (e.key === 'Escape' && campaignGallery.classList.contains('active')) {
        closeCampaignGallery();
      }
    });
  });
</script>

