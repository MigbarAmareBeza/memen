{% stylesheet %}
  .hero-banner {
    padding: 0;
    min-height: 100vh;
    padding-top: 37px; /* Account for announcement bar initially, header will float over */
    margin-left: 0;
  }

  .hero-banner__images {
    display: grid;
    grid-template-columns: 1.7fr 0.9fr; /* Left image 1.7x, right image 0.9x (0.7 of 1.3) */
    height: calc(100vh - 37px);
    gap: 20px; /* Add spacing between images */
    margin-left: 0;
    padding-left: 0;
  }

  .hero-banner__image-left,
  .hero-banner__image-right {
    position: relative;
    overflow: hidden;
  }
  
  .hero-banner__image-right {
    padding-right: 20px;
  }

  .hero-banner__image-left {
    margin-left: 0;
    padding-left: 0;
    margin-right: 0;
  }

  .hero-banner__image-container {
    position: relative;
    width: 100%;
    height: 100%;
  }

  .hero-banner__image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: none;
  }

  .hero-banner__image--active {
    display: block;
  }

  .hero-banner__image-right img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .hero-banner__text {
    position: absolute;
    z-index: 10;
    display: flex;
    flex-direction: column;
    gap: 20px; /* Reduced gap */
  }

  .hero-banner__text--left {
    top: 80px; /* Increased padding from menu bar */
    left: 40px; /* Reduced from 60px */
  }

  .hero-banner__text--right {
    bottom: 40px; /* Bottom alignment */
    right: 40px; /* Right alignment */
  }

  .hero-banner__title {
    font-size: 35.2px; /* 1.3x bigger: 24px * 1.3 = 31.2px */
    font-weight: 700;
    letter-spacing: -0.08em; /* Much tighter letter spacing */
    margin: 0;
    color: #ffffff;
    font-family: 'Archivo Black';
  }

  .hero-banner__subtitle {
    font-size: 13px; /* Smaller from 16px */
    line-height: 1.4;
    color: #ffffff;
    margin: 0;
    font-weight: 400;
    letter-spacing: -0.01em; /* Reduced letter spacing */
    font-family: 'Realtime Rounded Test', sans-serif;
  }

  .hero-banner__indent {
    margin-left: 20px; /* Add indent for depth */
  }

  .hero-banner__link a {
    color: #ffffff;
    text-decoration: underline;
    font-size: 11px; /* Smaller from 14px */
    letter-spacing: -0.01em; /* Reduced letter spacing */
    transition: opacity 0.2s ease;
    font-family: 'Realtime Rounded Test', sans-serif;
  }

  .hero-banner__link a:hover {
    opacity: 0.7;
  }

  @media (max-width: 768px) {
    .hero-banner__images {
      grid-template-columns: 1fr;
      height: 100vh;
      gap: 0;
    }

    .hero-banner__image-right {
      display: none;
    }

    .hero-banner__text--left {
      top: 100px;
      left: 20px;
    }

    .hero-banner__title {
      font-size: 26px; /* 1.3x bigger: 20px * 1.3 = 26px */
    }

    .hero-banner__subtitle {
      font-size: 12px;
    }

    .hero-banner__link a {
      font-size: 10px;
    }

    .hero-banner__indent {
      margin-left: 15px;
    }
  }

  @media (max-width: 480px) {
    .hero-banner__text--left {
      top: 110px;
      left: 15px;
    }

    .hero-banner__title {
      font-size: 23.4px; /* 1.3x bigger: 18px * 1.3 = 23.4px */
    }

    .hero-banner__subtitle {
      font-size: 11px;
    }

    .hero-banner__indent {
      margin-left: 12px;
    }
  }
{% endstylesheet %}

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const images = document.querySelectorAll('.hero-banner__image');
    
    if (images.length > 0) {
      // Remove active class from all images
      images.forEach(image => image.classList.remove('hero-banner__image--active'));
      
      // Randomly pick which image to show on page load
      const randomIndex = Math.floor(Math.random() * images.length);
      images[randomIndex].classList.add('hero-banner__image--active');
    }
  });
</script>

