{% comment %}
  Hero banner section for MEMEN homepage
{% endcomment %}

<section class="hero-banner">
  <div class="hero-banner__images">
    <div class="hero-banner__image-left">
      {% if section.settings.hero_image_left %}
        {{ section.settings.hero_image_left | image_url: width: 800 | image_tag: loading: 'lazy', alt: 'MEMEN fall collection' }}
      {% endif %}
      <div class="hero-banner__text">
        <h1 class="hero-banner__title">MEMEN</h1>
        <p class="hero-banner__subtitle">
          01<br>
          fall collection<br>
          more timeless
        </p>
        <div class="hero-banner__link">
          <a href="{{ collections.all.url }}">shop â†’</a>
        </div>
      </div>
    </div>
    <div class="hero-banner__image-right">
      {% if section.settings.hero_image_right %}
        {{ section.settings.hero_image_right | image_url: width: 800 | image_tag: loading: 'lazy', alt: 'MEMEN fall collection' }}
      {% endif %}
    </div>
  </div>
</section>

{% stylesheet %}
  .hero-banner {
    padding: 0;
    min-height: 100vh;
    padding-top: 97px; /* Account for fixed header + announcement bar */
  }

  .hero-banner__images {
    display: grid;
    grid-template-columns: 1fr 1fr;
    height: calc(100vh - 97px);
    gap: 0;
  }

  .hero-banner__image-left,
  .hero-banner__image-right {
    position: relative;
    overflow: hidden;
  }

  .hero-banner__image-left img,
  .hero-banner__image-right img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .hero-banner__text {
    position: absolute;
    top: 60px;
    left: 60px;
    z-index: 10;
    display: flex;
    flex-direction: column;
    gap: 40px;
  }

  .hero-banner__title {
    font-size: 32px;
    font-weight: 700;
    letter-spacing: 0.02em;
    margin: 0;
    color: #ffffff;
  }

  .hero-banner__subtitle {
    font-size: 16px;
    line-height: 1.4;
    color: #ffffff;
    margin: 0;
    font-weight: 400;
  }

  .hero-banner__link a {
    color: #ffffff;
    text-decoration: none;
    font-size: 14px;
    letter-spacing: 0.05em;
    transition: opacity 0.2s ease;
  }

  .hero-banner__link a:hover {
    opacity: 0.7;
  }

  @media (max-width: 768px) {
    .hero-banner__images {
      grid-template-columns: 1fr;
      height: 100vh;
    }

    .hero-banner__image-right {
      display: none;
    }

    .hero-banner__text {
      top: 40px;
      left: 20px;
    }

    .hero-banner__title {
      font-size: 24px;
    }
  }

  @media (max-width: 480px) {
    .hero-banner__text {
      top: 30px;
      left: 15px;
    }

    .hero-banner__title {
      font-size: 20px;
    }
  }
{% endstylesheet %}

