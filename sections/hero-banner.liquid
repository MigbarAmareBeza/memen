{% comment %}
  Hero banner section for MEMEN homepage
{% endcomment %}

<section class="hero-banner full-width">
  <div class="hero-banner__images">
    <div class="hero-banner__image-left">
      {% if section.settings.hero_image_left %}
        {{ section.settings.hero_image_left | image_url: width: 800 | image_tag: loading: 'lazy', alt: 'MEMEN fall collection' }}
      {% endif %}
      <div class="hero-banner__text hero-banner__text--left">
        <h1 class="hero-banner__title">MEMEN</h1>
        <p class="hero-banner__subtitle">
          01<br>
          <span class="hero-banner__indent">fall collection</span><br>
          <span class="hero-banner__indent">more timeless</span>
        </p>
        <div class="hero-banner__link">
          <a href="{{ collections.all.url }}">shop →</a>
        </div>
      </div>
    </div>
    <div class="hero-banner__image-right">
      {% if section.settings.hero_image_right %}
        {{ section.settings.hero_image_right | image_url: width: 800 | image_tag: loading: 'lazy', alt: 'MEMEN fall collection' }}
      {% endif %}
      <div class="hero-banner__text hero-banner__text--right">
        <p class="hero-banner__subtitle">
          01<br>
          <span class="hero-banner__indent">fall collection</span><br>
          <span class="hero-banner__indent">more timeless</span>
        </p>
        <div class="hero-banner__link">
          <a href="{{ collections.all.url }}">shop →</a>
        </div>
      </div>
    </div>
  </div>
</section>

{% stylesheet %}
  .hero-banner {
    padding: 0;
    min-height: 100vh;
    padding-top: 37px; /* Account for announcement bar initially, header will float over */
    margin-left: 0;
  }

  .hero-banner__images {
    display: grid;
    grid-template-columns: 1.7fr 0.9fr; /* Left image 1.7x, right image 0.9x (0.7 of 1.3) */
    height: calc(100vh - 37px);
    gap: 20px; /* Add spacing between images */
    margin-left: 0;
    padding-left: 0;
  }

  .hero-banner__image-left,
  .hero-banner__image-right {
    position: relative;
    overflow: hidden;
  }
  
  .hero-banner__image-right {
    padding-right: 20px;
  }

  .hero-banner__image-left {
    margin-left: 0;
    padding-left: 0;
    margin-right: 0;
  }

  .hero-banner__image-left img,
  .hero-banner__image-right img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .hero-banner__text {
    position: absolute;
    z-index: 10;
    display: flex;
    flex-direction: column;
    gap: 30px; /* Smaller gap */
  }

  .hero-banner__text--left {
    top: 40px; /* Reduced from 60px */
    left: 40px; /* Reduced from 60px */
  }

  .hero-banner__text--right {
    bottom: 40px; /* Bottom alignment */
    right: 40px; /* Right alignment */
  }

  .hero-banner__title {
    font-size: 24px; /* Smaller from 32px */
    font-weight: 700;
    letter-spacing: -0.02em; /* Reduced letter spacing */
    margin: 0;
    color: #ffffff;
    font-family: inherit; /* Keep default font for logo */
  }

  .hero-banner__subtitle {
    font-size: 13px; /* Smaller from 16px */
    line-height: 1.4;
    color: #ffffff;
    margin: 0;
    font-weight: 400;
    letter-spacing: -0.01em; /* Reduced letter spacing */
    font-family: 'Realtime Rounded Test', sans-serif;
  }

  .hero-banner__indent {
    margin-left: 20px; /* Add indent for depth */
  }

  .hero-banner__link a {
    color: #ffffff;
    text-decoration: none;
    font-size: 11px; /* Smaller from 14px */
    letter-spacing: -0.01em; /* Reduced letter spacing */
    transition: opacity 0.2s ease;
    font-family: 'Realtime Rounded Test', sans-serif;
  }

  .hero-banner__link a:hover {
    opacity: 0.7;
  }

  @media (max-width: 768px) {
    .hero-banner__images {
      grid-template-columns: 1fr;
      height: 100vh;
      gap: 0;
    }

    .hero-banner__image-right {
      display: none;
    }

    .hero-banner__text--left {
      top: 30px;
      left: 20px;
    }

    .hero-banner__title {
      font-size: 20px;
    }

    .hero-banner__subtitle {
      font-size: 12px;
    }

    .hero-banner__link a {
      font-size: 10px;
    }

    .hero-banner__indent {
      margin-left: 15px;
    }
  }

  @media (max-width: 480px) {
    .hero-banner__text--left {
      top: 20px;
      left: 15px;
    }

    .hero-banner__title {
      font-size: 18px;
    }

    .hero-banner__subtitle {
      font-size: 11px;
    }

    .hero-banner__indent {
      margin-left: 12px;
    }
  }
{% endstylesheet %}

