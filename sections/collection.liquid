{% comment %}
  MEMEN Collection page - matches the product listing design
{% endcomment %}

<section class="collection-page">
  <div class="collection-header">
    <div class="collection-header__content">
      <div class="collection-sort">
        <span>Sort by latest</span>
        <div class="collection-sort__icon">
          <svg width="16" height="16" viewBox="0 0 16 16">
            <rect x="1" y="1" width="4" height="4" fill="none" stroke="currentColor"/>
            <rect x="7" y="1" width="4" height="4" fill="none" stroke="currentColor"/>
            <rect x="13" y="1" width="4" height="4" fill="none" stroke="currentColor"/>
            <rect x="1" y="7" width="4" height="4" fill="none" stroke="currentColor"/>
            <rect x="7" y="7" width="4" height="4" fill="none" stroke="currentColor"/>
            <rect x="13" y="7" width="4" height="4" fill="none" stroke="currentColor"/>
          </svg>
        </div>
      </div>
    </div>
  </div>

  <div class="collection-products">
    {% paginate collection.products by 12 %}
      {% for product in collection.products %}
        <div class="product-card">
          <div class="product-card__image-container">
            {% if product.featured_image %}
              <a href="{{ product.url }}">
                {{ product.featured_image | image_url: width: 500 | image_tag: loading: 'lazy', alt: product.title, class: 'product-card__image' }}
              </a>
            {% else %}
              <div class="product-card__placeholder">
                <div class="product-card__placeholder-corner"></div>
              </div>
            {% endif %}
          </div>
          
          <div class="product-card__info">
            <h3 class="product-card__title">
              <a href="{{ product.url }}">{{ product.title }}</a>
            </h3>
            <p class="product-card__variant">{{ product.selected_or_first_available_variant.title }}</p>
            <p class="product-card__price">{{ product.price | money }}</p>
          </div>
        </div>
      {% else %}
        {% # Demo products when collection is empty %}
        {% for i in (1..4) %}
          <div class="product-card">
            <div class="product-card__image-container">
              <div class="product-card__placeholder">
                <div class="product-card__placeholder-corner"></div>
              </div>
            </div>
            
            <div class="product-card__info">
              <h3 class="product-card__title">
                <a href="#">mila bag</a>
              </h3>
              <p class="product-card__variant">
                {% case i %}
                  {% when 1 %}blue, nubuck, hs code 41
                  {% when 2 %}gray, nubuck, hs code 41
                  {% when 3 %}brown, nubuck, hs code 41
                  {% when 4 %}black, nubuck, hs code 41
                {% endcase %}
              </p>
              <p class="product-card__price">$425.00</p>
            </div>
          </div>
        {% endfor %}
      {% endfor %}

      {% if paginate.pages > 1 %}
        <div class="collection-pagination">
          {{ paginate | default_pagination }}
        </div>
      {% endif %}
    {% endpaginate %}
  </div>
</section>

{% stylesheet %}
  .collection-page {
    padding-top: 110px; /* Account for fixed header + announcement bar */
    background-color: #fff;
  }

  .collection-header {
    padding: 40px 20px 20px;
    border-bottom: 1px solid #eee;
  }

  .collection-header__content {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    justify-content: flex-end;
  }

  .collection-sort {
    display: flex;
    align-items: center;
    gap: 8px;
    font-size: 12px;
    color: #666;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .collection-sort__icon svg {
    width: 16px;
    height: 16px;
  }

  .collection-products {
    max-width: 1200px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 60px 40px;
    padding: 60px 20px;
  }

  .product-card {
    display: flex;
    flex-direction: column;
  }

  .product-card__image-container {
    position: relative;
    aspect-ratio: 1;
    margin-bottom: 20px;
  }

  .product-card__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .product-card__placeholder {
    width: 100%;
    height: 100%;
    background-color: #f5f5f5;
    position: relative;
    border: 1px solid #ddd;
  }

  .product-card__placeholder-corner {
    position: absolute;
    top: 20px;
    left: 20px;
    right: 20px;
    bottom: 20px;
    border: 1px solid #ddd;
  }

  .product-card__placeholder-corner::before {
    content: '';
    position: absolute;
    top: -1px;
    left: -1px;
    width: 30px;
    height: 30px;
    border-top: 1px solid #ddd;
    border-left: 1px solid #ddd;
  }

  .product-card__placeholder-corner::after {
    content: '';
    position: absolute;
    bottom: -1px;
    right: -1px;
    width: 30px;
    height: 30px;
    border-bottom: 1px solid #ddd;
    border-right: 1px solid #ddd;
  }

  .product-card__info {
    text-align: center;
  }

  .product-card__title {
    margin: 0 0 8px 0;
    font-size: 16px;
    font-weight: 400;
  }

  .product-card__title a {
    color: #000;
    text-decoration: none;
    transition: opacity 0.2s ease;
  }

  .product-card__title a:hover {
    opacity: 0.7;
  }

  .product-card__variant {
    margin: 0 0 8px 0;
    font-size: 12px;
    color: #666;
    font-weight: 400;
  }

  .product-card__price {
    margin: 0;
    font-size: 16px;
    color: #000;
    font-weight: 400;
  }

  .collection-pagination {
    grid-column: 1 / -1;
    text-align: center;
    margin-top: 40px;
  }

  @media (max-width: 768px) {
    .collection-products {
      grid-template-columns: 1fr;
      gap: 40px;
      padding: 40px 20px;
      max-width: 400px;
    }

    .collection-header {
      padding: 20px 20px 15px;
    }
  }

  @media (min-width: 1200px) {
    .collection-products {
      grid-template-columns: repeat(2, 1fr);
      gap: 80px 60px;
    }
  }
{% endstylesheet %}

