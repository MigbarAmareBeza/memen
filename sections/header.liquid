<header class="header">
  <nav class="header__nav">
    <div class="header__menu">
      <a href="{{ routes.root_url }}" class="header__link">SHOP</a>
      <a href="#" class="header__link">CAMPAIGNS</a>
      <a href="{{ pages.impact.url | default: '/pages/impact' }}" class="header__link">IMPACT</a>
      <a href="{{ routes.search_url }}" class="header__link">SEARCH</a>
      <a href="{{ routes.cart_url }}" class="header__link">
        CART({{ cart.item_count }})
      </a>
    </div>
  </nav>
</header>

{% stylesheet %}
  .header {
    position: fixed;
    top: 37px; /* Account for announcement bar height */
    left: 0;
    right: 0;
    z-index: 100;
    background-color: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(10px);
    padding: 12px 0;
    transition: top 0.3s ease;
  }

  .header__nav {
    display: flex;
    justify-content: flex-start;
    align-items: center;
    width: 100%;
    margin: 0;
    padding: 0 20px 0 40px;
  }


  .header__menu {
    display: flex;
    gap: 40px;
    align-items: center;
  }

  .header__link {
    font-size: 12px;
    font-weight: 400;
    letter-spacing: -0.01em;
    color: #000;
    text-decoration: none;
    text-transform: uppercase;
    transition: opacity 0.2s ease;
    font-family: 'Realtime Rounded Test', sans-serif;
  }

  .header__link:hover {
    opacity: 0.7;
  }

  @media (max-width: 768px) {
    .header__menu {
      gap: 20px;
    }
    
    .header__link {
      font-size: 10px;
    }
  }

  @media (max-width: 480px) {
    .header__nav {
      padding: 0 15px 0 15px;
    }
    
    .header__menu {
      gap: 15px;
    }
  }
{% endstylesheet %}

{% schema %}
{
  "name": "t:general.header",
  "settings": [
    {
      "type": "link_list",
      "id": "menu",
      "label": "t:labels.menu"
    }
  ]
}
{% endschema %}
