<header class="header">
  <nav class="header__nav">
    <!-- Left side navigation -->
    <div class="header__menu">
      <a href="{{ routes.root_url }}" class="header__link">HOME</a>
      <a href="/collections/all" class="header__link">SHOP</a>
      {% if customer %}
        <a href="{{ routes.account_url }}" class="header__link">ACCOUNT</a>
        <a href="{{ routes.account_logout_url }}" class="header__link">SIGN OUT</a>
      {% endif %}
    </div>
    
    <!-- Right side icons -->
    <div class="header__icons">
      
      {% unless customer %}
        <a href="{{ routes.account_login_url }}" class="header__icon" aria-label="Sign In">
          <svg width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M10 10C12.7614 10 15 7.76142 15 5C15 2.23858 12.7614 0 10 0C7.23858 0 5 2.23858 5 5C5 7.76142 7.23858 10 10 10Z" stroke="currentColor" stroke-width="1.5"/>
            <path d="M2 20C2 16.6863 5.68629 14 10 14C14.3137 14 18 16.6863 18 20" stroke="currentColor" stroke-width="1.5"/>
          </svg>
        </a>
      {% endunless %}
      
      <a href="{{ routes.cart_url }}" class="header__icon header__cart-icon" aria-label="Cart">
        <svg width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M3 7L4 17H16L17 7H3Z" stroke="currentColor" stroke-width="1.5" stroke-linejoin="round"/>
          <path d="M6 7V5C6 3.89543 6.89543 3 8 3H12C13.1046 3 14 3.89543 14 5V7" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/>
        </svg>
        {% if cart.item_count > 0 %}
          <span class="header__cart-count">{{ cart.item_count }}</span>
        {% endif %}
      </a>
    </div>
  </nav>
</header>

{% stylesheet %}
  .header {
    position: fixed;
    top: 37px; /* Account for announcement bar height */
    left: 0;
    right: 0;
    z-index: 100;
    background-color: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(10px);
    padding: 12px 0;
    transition: top 0.3s ease;
  }

  .header__nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 100%;
    margin: 0;
    padding: 0 40px;
  }

  .header__menu {
    display: flex;
    gap: 40px;
    align-items: center;
  }

  .header__icons {
    display: flex;
    gap: 20px;
    align-items: center;
  }

  .header__icon {
    color: #000;
    text-decoration: none;
    transition: opacity 0.2s ease;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 24px;
    height: 24px;
  }

  .header__icon:hover {
    opacity: 0.7;
  }

  .header__icon svg {
    width: 20px;
    height: 20px;
  }

  .header__cart-icon {
    position: relative;
  }

  .header__cart-count {
    position: absolute;
    top: -8px;
    right: -8px;
    background-color: #000;
    color: #fff;
    font-size: 10px;
    font-weight: 500;
    padding: 2px 6px;
    border-radius: 50%;
    min-width: 16px;
    height: 16px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-family: 'Realtime Rounded Test', sans-serif;
  }

  .header__link {
    font-size: 12px;
    font-weight: 400;
    letter-spacing: -0.01em;
    color: #000;
    text-decoration: none;
    text-transform: uppercase;
    transition: opacity 0.2s ease;
    font-family: 'Realtime Rounded Test', sans-serif;
  }

  .header__link:hover {
    opacity: 0.7;
  }

  @media (max-width: 768px) {
    .header__nav {
      padding: 0 20px;
    }
    
    .header__menu {
      gap: 20px;
    }
    
    .header__icons {
      gap: 15px;
    }
    
    .header__link {
      font-size: 10px;
    }
    
    .header__icon {
      width: 20px;
      height: 20px;
    }
    
    .header__icon svg {
      width: 18px;
      height: 18px;
    }
    
    .header__cart-count {
      font-size: 9px;
      min-width: 14px;
      height: 14px;
      top: -7px;
      right: -7px;
    }
  }

  @media (max-width: 480px) {
    .header__nav {
      padding: 0 15px;
    }
    
    .header__menu {
      gap: 15px;
    }
    
    .header__icons {
      gap: 12px;
    }
    
    .header__icon {
      width: 18px;
      height: 18px;
    }
    
    .header__icon svg {
      width: 16px;
      height: 16px;
    }
    
    .header__cart-count {
      font-size: 8px;
      min-width: 12px;
      height: 12px;
      top: -6px;
      right: -6px;
    }
  }
{% endstylesheet %}

