{% comment %}
  Announcement bar for shipping notice
{% endcomment %}

{% if section.settings.announcement_text != blank %}
  <div class="announcement-bar" id="announcement-bar">
    <div class="announcement-bar__content">
      <p class="announcement-bar__text">{{ section.settings.announcement_text }}</p>
      {% if section.settings.show_close_button %}
        <button class="announcement-bar__close" onclick="this.parentElement.parentElement.style.display='none'">
          Ã—
        </button>
      {% endif %}
    </div>
  </div>
{% endif %}

{% stylesheet %}
  .announcement-bar {
    background-color: #ffffff;
    padding: 8px 0;
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 101;
    transition: transform 0.3s ease;
  }

  .announcement-bar.hidden {
    transform: translateY(-100%);
  }

  .announcement-bar__content {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
    display: flex;
    justify-content: center;
    align-items: center;
    position: relative;
    gap: 8px;
  }

  .announcement-bar__text {
    font-size: 12px;
    color: #0066cc;
    margin: 0;
    text-align: center;
    font-weight: 400;
    font-family: 'Realtime Rounded Test', sans-serif;
  }

  .announcement-bar__text a {
    color: #0066cc;
    text-decoration: underline;
  }

  .announcement-bar__close {
    background: none;
    border: none;
    font-size: 16px;
    color: #1C00D4;
    cursor: pointer;
    padding: 0;
    width: 20px;
    height: 20px;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: none;
    outline: none;
    text-shadow: none;
    flex-shrink: 0;
  }

  @media (max-width: 768px) {
    .announcement-bar__content {
      padding: 0 15px;
      gap: 6px;
    }
    
    .announcement-bar__text {
      font-size: 11px;
      text-align: center;
      flex: 1;
    }
    
    .announcement-bar__close {
      font-size: 14px;
      width: 16px;
      height: 16px;
      flex-shrink: 0;
    }
  }
{% endstylesheet %}

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const announcementBar = document.getElementById('announcement-bar');
    const header = document.querySelector('.header');
    let lastScrollY = window.scrollY;
    let announcementBarHeight = 0;

    if (announcementBar) {
      announcementBarHeight = announcementBar.offsetHeight;
    }

    function updateHeaderPosition() {
      const scrollY = window.scrollY;
      
      if (announcementBar) {
        if (scrollY > 50) {
          announcementBar.classList.add('hidden');
          if (header) {
            header.style.top = '0px';
          }
        } else {
          announcementBar.classList.remove('hidden');
          if (header) {
            header.style.top = announcementBarHeight + 'px';
          }
        }
      }
      
      lastScrollY = scrollY;
    }

    window.addEventListener('scroll', updateHeaderPosition);
    
    // Initial setup
    updateHeaderPosition();
  });
</script>

{% schema %}
{
  "name": "Announcement Bar",
  "settings": [
    {
      "type": "text",
      "id": "announcement_text",
      "label": "Announcement Text",
      "default": "Please note in-stock pieces will ship within an estimated two weeks of order."
    },
    {
      "type": "checkbox",
      "id": "show_close_button",
      "label": "Show close button",
      "default": true
    }
  ],
  "presets": [
    {
      "name": "Announcement Bar",
      "category": "Custom"
    }
  ]
}
{% endschema %}