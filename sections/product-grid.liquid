{% comment %}
  Product grid section for MEMEN store
{% endcomment %}

<section class="product-grid">
  <div class="product-grid__container">
    {% if section.settings.collection != blank %}
      {% assign collection = section.settings.collection %}
      {% for product in collection.products limit: section.settings.products_to_show %}
        <div class="product-card">
          <div class="product-card__image-container">
            {% if product.featured_image %}
              <a href="{{ product.url }}">
                {{ product.featured_image | image_url: width: 400 | image_tag: loading: 'lazy', alt: product.title, class: 'product-card__image' }}
              </a>
            {% endif %}
            <div class="product-card__crop-bottom"></div>
          </div>
          
          <div class="product-card__info">
            <h3 class="product-card__title">
              <a href="{{ product.url }}">{{ product.title }}</a>
            </h3>
            <div class="product-card__details">
              <p class="product-card__variant">{{ product.selected_or_first_available_variant.title }}</p>
              <p class="product-card__price">{{ product.price | money }}</p>
            </div>
          </div>
        </div>
      {% endfor %}
    {% else %}
      {% # Demo products - use actual Mila bag product if available %}
      {% assign mila_bag = all_products['mila-bag'] %}
      {% for i in (1..4) %}
        <div class="product-card">
          <div class="product-card__image-container">
            {% if mila_bag.featured_image %}
              <a href="/products/mila-bag">
                {{ mila_bag.featured_image | image_url: width: 400 | image_tag: loading: 'lazy', alt: mila_bag.title, class: 'product-card__image' }}
              </a>
            {% else %}
              <div class="product-card__placeholder"></div>
            {% endif %}
            <div class="product-card__crop-bottom"></div>
          </div>
          
          <div class="product-card__info">
            <h3 class="product-card__title">
              <a href="/products/mila-bag">{% if mila_bag %}{{ mila_bag.title }}{% else %}mila bag{% endif %}</a>
            </h3>
            <div class="product-card__details">
              <p class="product-card__variant">
                {% case i %}
                  {% when 1 %}blue, nubuck, hs code 41
                  {% when 2 %}gray, nubuck, hs code 41
                  {% when 3 %}brown, nubuck, hs code 41
                  {% when 4 %}black, nubuck, hs code 41
                {% endcase %}
              </p>
              <p class="product-card__price">{% if mila_bag %}{{ mila_bag.price | money }}{% else %}$425.00{% endif %}</p>
            </div>
          </div>
        </div>
      {% endfor %}
    {% endif %}
  </div>
</section>

{% stylesheet %}
  .product-grid {
    padding: 60px 20px;
    background-color: #fff;
  }

  .product-grid__container {
    max-width: 490px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 28px 17px;
  }

  .product-card {
    display: flex;
    flex-direction: column;
  }

  .product-card__image-container {
    position: relative;
    aspect-ratio: 1;
    margin-bottom: 12px;
    transform: scale(0.6);
    transform-origin: center top;
    margin-bottom: -40%;
  }

  .product-card__image-container::before {
    content: '';
    position: absolute;
    top: 0px;
    left: 0px;
    width: 24px;
    height: 24px;
    border-top: 2px solid rgba(0, 0, 0, 0.8);
    border-left: 2px solid rgba(0, 0, 0, 0.8);
    z-index: 2;
  }

  .product-card__image-container::after {
    content: '';
    position: absolute;
    top: 0px;
    right: 0px;
    width: 24px;
    height: 24px;
    border-top: 2px solid rgba(0, 0, 0, 0.8);
    border-right: 2px solid rgba(0, 0, 0, 0.8);
    z-index: 2;
  }

  .product-card__image {
    width: calc(100% - 48px);
    height: calc(100% - 48px);
    object-fit: cover;
    position: relative;
    margin: 24px;
  }

  .product-card__crop-bottom::before {
    content: '';
    position: absolute;
    bottom: 0px;
    left: 0px;
    width: 24px;
    height: 24px;
    border-bottom: 2px solid rgba(0, 0, 0, 0.8);
    border-left: 2px solid rgba(0, 0, 0, 0.8);
    z-index: 2;
  }

  .product-card__crop-bottom::after {
    content: '';
    position: absolute;
    bottom: 0px;
    right: 0px;
    width: 24px;
    height: 24px;
    border-bottom: 2px solid rgba(0, 0, 0, 0.8);
    border-right: 2px solid rgba(0, 0, 0, 0.8);
    z-index: 2;
  }

  .product-card__placeholder {
    width: calc(100% - 48px);
    height: calc(100% - 48px);
    background-color: #f8f8f8;
    position: relative;
    margin: 24px;
  }

  .product-card__info {
    text-align: left;
    padding: 0 0px;
    margin: 0;
  }

  .product-card__title {
    margin: 0 0 4px 0;
    font-size: 14px;
    font-weight: 600;
    letter-spacing: -0.01em;
    font-family: 'Realtime Rounded Test', sans-serif;
    line-height: 1.2;
  }

  .product-card__title a {
    color: #000;
    text-decoration: none;
    transition: opacity 0.2s ease;
  }

  .product-card__title a:hover {
    opacity: 0.7;
  }

  .product-card__details {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: 8px;
  }

  .product-card__variant {
    margin: 0;
    font-size: 11px;
    color: #666;
    font-weight: 400;
    line-height: 1.3;
    font-family: 'Realtime Rounded Test', sans-serif;
    flex: 1;
  }

  .product-card__price {
    margin: 0;
    font-size: 11px;
    color: #000;
    font-weight: 500;
    font-family: 'Realtime Rounded Test', sans-serif;
    flex-shrink: 0;
    white-space: nowrap;
  }

  @media (max-width: 768px) {
    .product-grid {
      padding: 40px 20px;
    }

    .product-grid__container {
      grid-template-columns: 1fr;
      gap: 40px;
      max-width: 400px;
    }
  }

  @media (min-width: 1000px) {
    .product-grid__container {
      max-width: 560px;
      grid-template-columns: repeat(2, 1fr);
      gap: 35px 21px;
    }
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Product Grid",
  "settings": [
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
    {
      "type": "range",
      "id": "products_to_show",
      "min": 2,
      "max": 12,
      "step": 2,
      "default": 4,
      "label": "Products to show"
    }
  ],
  "presets": [
    {
      "name": "Product Grid",
      "category": "Custom"
    }
  ]
}
{% endschema %}