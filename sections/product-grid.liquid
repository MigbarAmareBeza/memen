{% comment %}
  Product grid section for MEMEN store
{% endcomment %}

<section class="product-grid">
  <div class="product-grid__container">
    {% if section.settings.collection != blank %}
      {% assign collection = section.settings.collection %}
      {% for product in collection.products limit: section.settings.products_to_show %}
        <div class="product-card">
          <div class="product-card__image-container">
            {% if product.featured_image %}
              <a href="{{ product.url }}">
                {{ product.featured_image | image_url: width: 400 | image_tag: loading: 'lazy', alt: product.title, class: 'product-card__image' }}
              </a>
            {% endif %}
          </div>
          
          <div class="product-card__info">
            <h3 class="product-card__title">
              <a href="{{ product.url }}">{{ product.title }}</a>
            </h3>
            <p class="product-card__variant">{{ product.selected_or_first_available_variant.title }}</p>
            <p class="product-card__price">{{ product.price | money }}</p>
          </div>
        </div>
      {% endfor %}
    {% else %}
      {% # Demo products when no collection is selected %}
      {% for i in (1..4) %}
        <div class="product-card">
          <div class="product-card__image-container">
            <div class="product-card__placeholder">
              <div class="product-card__placeholder-corner"></div>
            </div>
          </div>
          
          <div class="product-card__info">
            <h3 class="product-card__title">
              <a href="#">mila bag</a>
            </h3>
            <p class="product-card__variant">
              {% case i %}
                {% when 1 %}blue, nubuck, hs code 41
                {% when 2 %}gray, nubuck, hs code 41
                {% when 3 %}brown, nubuck, hs code 41
                {% when 4 %}black, nubuck, hs code 41
              {% endcase %}
            </p>
            <p class="product-card__price">$425.00</p>
          </div>
        </div>
      {% endfor %}
    {% endif %}
  </div>
</section>

{% stylesheet %}
  .product-grid {
    padding: 60px 20px;
    background-color: #fff;
  }

  .product-grid__container {
    max-width: 1200px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 60px 40px;
  }

  .product-card {
    display: flex;
    flex-direction: column;
  }

  .product-card__image-container {
    position: relative;
    aspect-ratio: 1;
    margin-bottom: 20px;
  }

  .product-card__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .product-card__placeholder {
    width: 100%;
    height: 100%;
    background-color: #f5f5f5;
    position: relative;
    border: 1px solid #ddd;
  }

  .product-card__placeholder-corner {
    position: absolute;
    top: 20px;
    left: 20px;
    right: 20px;
    bottom: 20px;
    border: 1px solid #ddd;
  }

  .product-card__placeholder-corner::before {
    content: '';
    position: absolute;
    top: -1px;
    left: -1px;
    width: 30px;
    height: 30px;
    border-top: 1px solid #ddd;
    border-left: 1px solid #ddd;
  }

  .product-card__placeholder-corner::after {
    content: '';
    position: absolute;
    bottom: -1px;
    right: -1px;
    width: 30px;
    height: 30px;
    border-bottom: 1px solid #ddd;
    border-right: 1px solid #ddd;
  }

  .product-card__info {
    text-align: center;
  }

  .product-card__title {
    margin: 0 0 8px 0;
    font-size: 16px;
    font-weight: 400;
  }

  .product-card__title a {
    color: #000;
    text-decoration: none;
    transition: opacity 0.2s ease;
  }

  .product-card__title a:hover {
    opacity: 0.7;
  }

  .product-card__variant {
    margin: 0 0 8px 0;
    font-size: 12px;
    color: #666;
    font-weight: 400;
  }

  .product-card__price {
    margin: 0;
    font-size: 16px;
    color: #000;
    font-weight: 400;
  }

  @media (max-width: 768px) {
    .product-grid {
      padding: 40px 20px;
    }

    .product-grid__container {
      grid-template-columns: 1fr;
      gap: 40px;
      max-width: 400px;
    }
  }

  @media (min-width: 1200px) {
    .product-grid__container {
      grid-template-columns: repeat(2, 1fr);
      gap: 80px 60px;
    }
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Product Grid",
  "settings": [
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
    {
      "type": "range",
      "id": "products_to_show",
      "min": 2,
      "max": 12,
      "step": 2,
      "default": 4,
      "label": "Products to show"
    }
  ],
  "presets": [
    {
      "name": "Product Grid",
      "category": "Custom"
    }
  ]
}
{% endschema %}