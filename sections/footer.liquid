<footer class="footer">
  <!-- Decorative border pattern -->
  <div class="footer__border-pattern"></div>
  
  <!-- Main footer content -->
  <div class="footer__main">
    <div class="footer__hero">
      {% if settings.logo %}
        <div class="footer__logo">
          <img 
            src="{{ settings.logo | image_url: width: settings.logo_width }}" 
            alt="{{ shop.name }}"
            width="{{ settings.logo_width }}"
            height="auto"
            class="footer__logo-image"
          />
        </div>
      {% endif %}
      <h2 class="footer__hero-title">100% made with love and care in Africa</h2>
      <p class="footer__hero-description">
        At memen, we're committed to building a strong, fair and sustainable fashion industry in Africa, with 
        a production that values and upholds artisans, their craftsmanship and their communities.
      </p>
      <a href="{{ pages.impact.url | default: '/pages/impact' }}" class="footer__learn-more">LEARN MORE</a>
    </div>
    
    <!-- Values icons and links section -->
    <div class="footer__right-section">
      <div class="footer__values">
        <div class="footer__value">
          <div class="footer__value-icon">
            <img src="{{ 'africaicon.png' | asset_url }}" alt="Made in Africa" width="46" height="46">
          </div>
          <span class="footer__value-label">Made In<br>Africa</span>
        </div>
        
        <div class="footer__value">
          <div class="footer__value-icon">
            <img src="{{ 'eco-friendly.png' | asset_url }}" alt="Eco-Friendly" width="46" height="46">
          </div>
          <span class="footer__value-label">Eco-<br>Friendly</span>
        </div>
        
        <div class="footer__value">
          <div class="footer__value-icon">
            <img src="{{ 'handwoven.png' | asset_url }}" alt="Handcrafted in Ethiopia" width="46" height="46">
          </div>
          <span class="footer__value-label">Hand-<br>crafted in<br>Ethiopia</span>
        </div>
      </div>
      
      <!-- Simple footer links aligned under icons -->
      <div class="footer__simple-links">
        <a href="{{ collections.all.url }}" class="footer__link">SHOP</a>
        <a href="{{ pages['policy'].url }}" class="footer__link">POLICY</a>
        <a href="{{ routes.account_url }}" class="footer__link">REGISTER</a>
        <a href="{{ routes.account_login_url }}" class="footer__link">SIGN IN</a>
        <a href="{{ pages.impact.url | default: '/pages/impact' }}" class="footer__link">IMPACT</a>
      </div>
      
      <!-- Newsletter signup -->
      <div class="footer__newsletter">
        <h3 class="footer__newsletter-title">Stay Updated</h3>
        <p class="footer__newsletter-description">Get the latest updates on new collections and exclusive offers.</p>
        <form class="footer__newsletter-form" action="{{ routes.root_url }}contact#contact_form" method="post" id="contact_form" accept-charset="UTF-8">
          <input type="hidden" name="form_type" value="customer" />
          <input type="hidden" name="utf8" value="âœ“" />
          <input type="hidden" name="contact[tags]" value="newsletter">
          <input 
            type="email" 
            name="contact[email]" 
            id="newsletter-email"
            placeholder="Enter your email address"
            class="footer__newsletter-input"
            required
          >
          <div class="footer__newsletter-button-wrapper">
            <button type="submit" class="footer__newsletter-submit">
              Subscribe
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</footer>

{% stylesheet %}
  .footer {
    background-color: #ffffff !important;
    font-family: 'Realtime Rounded Test', sans-serif;
    width: 100%;
    margin: 0;
    padding: 0;
  }

  /* Decorative border pattern */
  .footer__border-pattern {
    height: 30px;
    background-image: 
      /* Vertical lines pattern */
      repeating-linear-gradient(90deg, transparent 0px, transparent 2px, #000 2px, #000 3px),
      /* Diagonal crosshatch pattern */
      repeating-linear-gradient(45deg, transparent 0px, transparent 1px, #000 1px, #000 2px),
      repeating-linear-gradient(-45deg, transparent 0px, transparent 1px, #000 1px, #000 2px);
    background-size: 4px 100%, 6px 6px, 6px 6px;
    background-position: 0 0, 0 0, 3px 3px;
    border-bottom: 1px solid #000;
    opacity: 0.8;
  }

  /* Main footer content */
  .footer__main {
    padding: 40px 5% 30px;
    width: 100%;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 60px;
    align-items: start;
    box-sizing: border-box;
  }

  .footer__logo {
    margin-bottom: 25px;
  }

  .footer__logo-image {
    max-width: 100%;
    height: auto;
    display: block;
  }

  .footer__hero-title {
    font-size: 18px;
    font-weight: 300;
    font-style: italic;
    color: #666;
    margin: 0 0 15px 0;
    line-height: 1.3;
    max-width: 500px;
  }

  .footer__hero-description {
    font-size: 14px;
    color: #333;
    line-height: 1.5;
    margin: 0 0 20px 0;
    max-width: 480px;
  }

  .footer__learn-more {
    display: inline-block;
    color: #333;
    text-decoration: underline;
    font-size: 12px;
    font-weight: 500;
    letter-spacing: 0.5px;
    text-transform: uppercase;
    transition: opacity 0.2s ease;
  }

  .footer__learn-more:hover {
    opacity: 0.7;
  }

  /* Right section containing values and links */
  .footer__right-section {
    display: flex;
    flex-direction: column;
    gap: 25px;
    align-items: flex-end;
  }

  /* Values section */
  .footer__values {
    display: flex;
    gap: 30px;
    justify-content: flex-end;
    align-items: start;
  }

  .footer__value {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    gap: 10px;
  }

  .footer__value-icon {
    width: 57.5px;
    height: 57.5px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #666;
  }

  .footer__value-label {
    font-size: 12px;
    color: #666;
    line-height: 1.3;
    font-weight: 400;
  }

  /* Simple links now under the values */
  .footer__simple-links {
    display: flex;
    justify-content: flex-end;
    align-items: center;
    gap: 40px;
  }

  .footer__link {
    font-size: 12px;
    font-weight: 400;
    letter-spacing: 0.05em;
    color: #666;
    text-decoration: none;
    text-transform: uppercase;
    transition: color 0.2s ease;
    font-family: 'Realtime Rounded Test', sans-serif;
  }

  .footer__link:hover {
    color: #333;
  }

  /* Newsletter section */
  .footer__newsletter {
    margin-top: 30px;
    max-width: 350px;
  }

  .footer__newsletter-title {
    font-size: 14px;
    font-weight: 500;
    color: #333;
    margin: 0 0 8px 0;
    font-family: 'Realtime Rounded Test', sans-serif;
  }

  .footer__newsletter-description {
    font-size: 12px;
    color: #666;
    line-height: 1.4;
    margin: 0 0 15px 0;
    font-family: 'Realtime Rounded Test', sans-serif;
  }

  .footer__newsletter-form {
    width: 100%;
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .footer__newsletter-input {
    width: 100%;
    border: 1px solid #000;
    border-radius: 0;
    padding: 12px 14px;
    font-size: 14px;
    font-family: 'Realtime Rounded Test', sans-serif;
    background: #ffffff;
    outline: none;
    color: #333;
    transition: border-color 0.2s ease;
    box-sizing: border-box;
  }

  .footer__newsletter-input:focus {
    border-color: #999;
  }

  .footer__newsletter-input::placeholder {
    color: #aaa;
  }

  .footer__newsletter-submit {
    display: inline-block;
    padding: 8px 32px;
    background-color: transparent;
    color: #000;
    border: none;
    font-size: 14px;
    font-family: 'Realtime Rounded Test', sans-serif;
    letter-spacing: 0.05em;
    text-transform: lowercase;
    text-decoration: none;
    cursor: pointer;
    text-align: center;
    width: 100%;
    box-sizing: border-box;
    position: relative;
    margin: 0;
  }

  /* Top corner crop marks */
  .footer__newsletter-submit::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 24px;
    height: 12px;
    border-top: 1px solid #000;
    border-left: 1px solid #000;
    pointer-events: none;
  }

  .footer__newsletter-submit::after {
    content: '';
    position: absolute;
    top: 0;
    right: 0;
    width: 24px;
    height: 12px;
    border-top: 1px solid #000;
    border-right: 1px solid #000;
    pointer-events: none;
  }

  .footer__newsletter-submit:hover {
    opacity: 0.7;
  }

  /* Button wrapper for bottom crop marks */
  .footer__newsletter-button-wrapper {
    position: relative;
    display: inline-block;
    width: 100%;
  }

  .footer__newsletter-button-wrapper::before {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 24px;
    height: 12px;
    border-bottom: 1px solid #000;
    border-left: 1px solid #000;
    pointer-events: none;
    z-index: 1;
  }

  .footer__newsletter-button-wrapper::after {
    content: '';
    position: absolute;
    bottom: 0;
    right: 0;
    width: 24px;
    height: 12px;
    border-bottom: 1px solid #000;
    border-right: 1px solid #000;
    pointer-events: none;
    z-index: 1;
  }

  /* Responsive design */
  @media (max-width: 1200px) {
    .footer__main {
      padding: 35px 4% 25px;
      gap: 50px;
    }

    .footer__values {
      gap: 25px;
    }

    .footer__simple-links {
      gap: 35px;
    }
  }

  @media (max-width: 968px) {
    .footer__main {
      grid-template-columns: 1fr;
      gap: 30px;
      text-align: left;
      padding: 30px 4% 20px;
    }

    .footer__right-section {
      align-items: flex-start;
    }

    .footer__values {
      justify-content: flex-start;
      gap: 20px;
    }

    .footer__simple-links {
      justify-content: flex-start;
      gap: 25px;
    }
  }

  @media (max-width: 768px) {
    .footer__main {
      padding: 30px 3% 20px;
      gap: 25px;
    }

    .footer__hero-title {
      font-size: 16px;
    }

    .footer__values {
      gap: 15px;
      flex-wrap: wrap;
    }

    .footer__simple-links {
      gap: 20px;
      flex-wrap: wrap;
    }

    .footer__newsletter {
      margin-top: 25px;
      max-width: 100%;
    }

    .footer__newsletter-title {
      font-size: 13px;
    }

    .footer__newsletter-description {
      font-size: 11px;
      margin-bottom: 12px;
    }
  }

  @media (max-width: 480px) {
    .footer__main {
      padding: 25px 2% 15px;
    }

    .footer__hero-title {
      font-size: 15px;
    }

    .footer__values {
      justify-content: center;
    }

    .footer__value {
      gap: 8px;
    }

    .footer__value-icon {
      width: 46px;
      height: 46px;
    }

    .footer__simple-links {
      gap: 15px;
      justify-content: center;
    }

    .footer__link {
      font-size: 10px;
    }

    .footer__newsletter {
      margin-top: 20px;
    }

    .footer__newsletter-title {
      font-size: 12px;
    }

    .footer__newsletter-description {
      font-size: 10px;
      margin-bottom: 10px;
    }

    .footer__newsletter-input {
      padding: 10px 14px;
      font-size: 11px;
    }

    .footer__newsletter-submit {
      padding: 10px 20px;
      font-size: 11px;
    }
  }
{% endstylesheet %}

