{% stylesheet %}
  .footer {
    background-color: #f5f4f2;
    font-family: 'Realtime Rounded Test', sans-serif;
  }

  /* Decorative border pattern */
  .footer__border-pattern {
    height: 40px;
    background-image: 
      repeating-linear-gradient(45deg, transparent, transparent 3px, #000 3px, #000 6px),
      repeating-linear-gradient(-45deg, transparent, transparent 3px, #000 3px, #000 6px);
    background-size: 8px 8px;
    border-bottom: 2px solid #000;
  }

  /* Main footer content */
  .footer__main {
    padding: 80px 40px;
    max-width: 1400px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 80px;
    align-items: start;
  }

  .footer__hero-title {
    font-size: 48px;
    font-weight: 300;
    font-style: italic;
    color: #666;
    margin: 0 0 30px 0;
    line-height: 1.2;
    max-width: 500px;
  }

  .footer__hero-description {
    font-size: 16px;
    color: #333;
    line-height: 1.6;
    margin: 0 0 40px 0;
    max-width: 480px;
  }

  .footer__learn-more {
    display: inline-block;
    color: #333;
    text-decoration: underline;
    font-size: 14px;
    font-weight: 500;
    letter-spacing: 0.5px;
    text-transform: uppercase;
    transition: opacity 0.2s ease;
  }

  .footer__learn-more:hover {
    opacity: 0.7;
  }

  /* Values section */
  .footer__values {
    display: flex;
    gap: 40px;
    justify-content: flex-end;
    align-items: start;
  }

  .footer__value {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    gap: 12px;
  }

  .footer__value-icon {
    width: 60px;
    height: 60px;
    border-radius: 50%;
    border: 1px solid #ccc;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #666;
  }

  .footer__value-label {
    font-size: 12px;
    color: #666;
    line-height: 1.3;
    font-weight: 400;
  }

  /* Footer links section */
  .footer__links-section {
    background-color: #f5f4f2;
    padding: 60px 40px 40px;
  }

  .footer__links-grid {
    max-width: 1400px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: repeat(5, 1fr);
    gap: 80px;
  }

  .footer__column-title {
    font-size: 12px;
    font-weight: 500;
    color: #333;
    margin: 0 0 20px 0;
    letter-spacing: 0.5px;
    text-transform: uppercase;
  }

  .footer__links-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .footer__links-list li {
    margin-bottom: 12px;
  }

  .footer__link {
    font-size: 14px;
    color: #666;
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .footer__link:hover {
    color: #333;
  }

  /* Newsletter section */
  .footer__newsletter {
    grid-column: span 1;
  }

  .footer__newsletter-description {
    font-size: 14px;
    color: #666;
    line-height: 1.5;
    margin: 0 0 25px 0;
  }

  .footer__newsletter-form {
    display: flex;
    margin-bottom: 30px;
  }

  .footer__newsletter-input {
    flex: 1;
    padding: 12px 16px;
    border: none;
    border-bottom: 1px solid #ccc;
    background: transparent;
    font-size: 14px;
    font-family: inherit;
    outline: none;
  }

  .footer__newsletter-input:focus {
    border-bottom-color: #333;
  }

  .footer__newsletter-submit {
    background: none;
    border: none;
    font-size: 18px;
    padding: 8px 12px;
    cursor: pointer;
    color: #666;
    transition: color 0.2s ease;
  }

  .footer__newsletter-submit:hover {
    color: #333;
  }

  /* Social media icons */
  .footer__social {
    display: flex;
    gap: 16px;
  }

  .footer__social-link {
    width: 32px;
    height: 32px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #666;
    transition: color 0.2s ease;
  }

  .footer__social-link:hover {
    color: #333;
  }

  /* Responsive design */
  @media (max-width: 1200px) {
    .footer__main {
      padding: 60px 30px;
      gap: 60px;
    }

    .footer__links-section {
      padding: 50px 30px 30px;
    }

    .footer__links-grid {
      gap: 50px;
    }

    .footer__values {
      gap: 30px;
    }
  }

  @media (max-width: 968px) {
    .footer__main {
      grid-template-columns: 1fr;
      gap: 50px;
      text-align: left;
    }

    .footer__values {
      justify-content: flex-start;
      gap: 25px;
    }

    .footer__links-grid {
      grid-template-columns: repeat(3, 1fr);
      gap: 40px;
    }

    .footer__newsletter {
      grid-column: span 3;
    }
  }

  @media (max-width: 768px) {
    .footer__main {
      padding: 40px 20px;
      gap: 40px;
    }

    .footer__hero-title {
      font-size: 36px;
    }

    .footer__values {
      gap: 20px;
      flex-wrap: wrap;
    }

    .footer__links-section {
      padding: 40px 20px 30px;
    }

    .footer__links-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 30px;
    }

    .footer__newsletter {
      grid-column: span 2;
    }
  }

  @media (max-width: 480px) {
    .footer__hero-title {
      font-size: 28px;
    }

    .footer__values {
      justify-content: center;
    }

    .footer__value {
      gap: 8px;
    }

    .footer__value-icon {
      width: 50px;
      height: 50px;
    }

    .footer__links-grid {
      grid-template-columns: 1fr;
      gap: 25px;
    }

    .footer__newsletter {
      grid-column: span 1;
    }
  }
{% endstylesheet %}

