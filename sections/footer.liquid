    </div>
  </div>
</footer>

{% stylesheet %}
  .footer {
    background-color: #f5f4f2;
    font-family: 'Realtime Rounded Test', sans-serif;
    width: 100%;
    margin: 0;
    padding: 0;
  }

  /* Decorative border pattern */
  .footer__border-pattern {
    height: 40px;
    background-image: 
      repeating-linear-gradient(45deg, transparent, transparent 3px, #000 3px, #000 6px),
      repeating-linear-gradient(-45deg, transparent, transparent 3px, #000 3px, #000 6px);
    background-size: 8px 8px;
    border-bottom: 2px solid #000;
  }

  /* Main footer content */
  .footer__main {
    padding: 40px 5% 30px;
    width: 100%;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 60px;
    align-items: start;
    box-sizing: border-box;
  }

  .footer__hero-title {
    font-size: 21px;
    font-weight: 300;
    font-style: italic;
    color: #666;
    margin: 0 0 20px 0;
    line-height: 1.3;
    max-width: 500px;
  }

  .footer__hero-description {
    font-size: 16px;
    color: #333;
    line-height: 1.5;
    margin: 0 0 25px 0;
    max-width: 480px;
  }

  .footer__learn-more {
    display: inline-block;
    color: #333;
    text-decoration: underline;
    font-size: 14px;
    font-weight: 500;
    letter-spacing: 0.5px;
    text-transform: uppercase;
    transition: opacity 0.2s ease;
  }

  .footer__learn-more:hover {
    opacity: 0.7;
  }

  /* Right section containing values and links */
  .footer__right-section {
    display: flex;
    flex-direction: column;
    gap: 25px;
    align-items: flex-end;
  }

  /* Values section */
  .footer__values {
    display: flex;
    gap: 30px;
    justify-content: flex-end;
    align-items: start;
  }

  .footer__value {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    gap: 10px;
  }

  .footer__value-icon {
    width: 50px;
    height: 50px;
    border-radius: 50%;
    border: 1px solid #ccc;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #666;
  }

  .footer__value-label {
    font-size: 12px;
    color: #666;
    line-height: 1.3;
    font-weight: 400;
  }

  /* Simple links now under the values */
  .footer__simple-links {
    display: flex;
    justify-content: flex-end;
    align-items: center;
    gap: 40px;
  }

  .footer__link {
    font-size: 12px;
    font-weight: 400;
    letter-spacing: 0.05em;
    color: #666;
    text-decoration: none;
    text-transform: uppercase;
    transition: color 0.2s ease;
    font-family: 'Realtime Rounded Test', sans-serif;
  }

  .footer__link:hover {
    color: #333;
  }

  /* Responsive design */
  @media (max-width: 1200px) {
    .footer__main {
      padding: 35px 4% 25px;
      gap: 50px;
    }

    .footer__values {
      gap: 25px;
    }

    .footer__simple-links {
      gap: 35px;
    }
  }

  @media (max-width: 968px) {
    .footer__main {
      grid-template-columns: 1fr;
      gap: 30px;
      text-align: left;
      padding: 30px 4% 20px;
    }

    .footer__right-section {
      align-items: flex-start;
    }

    .footer__values {
      justify-content: flex-start;
      gap: 20px;
    }

    .footer__simple-links {
      justify-content: flex-start;
      gap: 25px;
    }
  }

  @media (max-width: 768px) {
    .footer__main {
      padding: 30px 3% 20px;
      gap: 25px;
    }

    .footer__hero-title {
      font-size: 19px;
    }

    .footer__values {
      gap: 15px;
      flex-wrap: wrap;
    }

    .footer__simple-links {
      gap: 20px;
      flex-wrap: wrap;
    }
  }

  @media (max-width: 480px) {
    .footer__main {
      padding: 25px 2% 15px;
    }

    .footer__hero-title {
      font-size: 18px;
    }

    .footer__values {
      justify-content: center;
    }

    .footer__value {
      gap: 8px;
    }

    .footer__value-icon {
      width: 40px;
      height: 40px;
    }

    .footer__simple-links {
      gap: 15px;
      justify-content: center;
    }

    .footer__link {
      font-size: 10px;
    }
  }
{% endstylesheet %}

