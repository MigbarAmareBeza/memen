<!doctype html>
<html lang="{{ request.locale.iso_code }}">
  <link rel="icon" type="image/png" href="https://cdn.shopify.com/s/files/1/0715/2707/1796/files/IMG_2282.jpg?v=1766271224">
  <head>
    {% # Inlined CSS Variables %}
    {% render 'css-variables' %}

    {% # Load and preload the critical CSS %}
    {{ 'critical.css' | asset_url | stylesheet_tag: preload: true }}
    
    {% # Load custom fonts %}
    {{ 'realtime-rounded-fonts.css' | asset_url | stylesheet_tag }}

    {% # Social, title, etc. %}
    {% render 'meta-tags' %}

    {{ content_for_header }}
  </head>

  <body>
    {% sections 'header-group' %}

    {{ content_for_layout }}

    {% sections 'footer-group' %}
  </body>
</html>
